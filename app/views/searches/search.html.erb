<table class="table table-hover table-inverse">
  <thead>
    <% if @range == "User" %>
      <h2>Users search for "<%= @word %>"</h2>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Introduction</th>
        <th colspan="3"></th>
      </tr>
    <% else %>
      <h2>Books search for "<%= @word %>"</h2>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    <% end %>

  </thead>

  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no-image-icon.jpg" %></td>
          <td><%= link_to user.name, user_path(user) %></td>
          <td><%= user.introduction %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no-image-icon.jpg" %></td>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>